# ========================================
# Plantilla de Configuración de n8n
# ========================================
# 
# Copia este archivo a .env y completa con tus valores
# 

# Token de autenticación MCP para n8n
N8N_MCP_TOKEN=tu_token_mcp_aqui

# Token de GitHub para integración
GITHUB_TOKEN=tu_token_github_aqui

# URL pública de webhooks (se actualiza automáticamente)
WEBHOOK_URL=https://tu-url-cloudflare.trycloudflare.com/

# ========================================
# Configuración SSH
# ========================================

SSH_HOST=tu_host_ssh
SSH_USER=tu_usuario_ssh
SSH_PASSWORD=tu_password_ssh

# ========================================
# Configuración de Base de Datos
# ========================================

DB_HOST=tu_host_db
DB_PORT=3306
DB_USER=tu_usuario_db
DB_PASSWORD=tu_password_db
DB_NAME=tu_nombre_db
