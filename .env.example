# ===========================================
# n8n Configuration
# ===========================================

# Timezone for n8n (e.g., America/Mexico_City, UTC, Europe/Madrid)
GENERIC_TIMEZONE=America/Mexico_City

# n8n base URL (update with your Cloudflare tunnel URL)
N8N_HOST=https://your-subdomain.your-domain.com

# Webhook URL (same as N8N_HOST typically)
WEBHOOK_URL=https://your-subdomain.your-domain.com

# n8n port (internal)
N8N_PORT=5678

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================

# PostgreSQL credentials
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=n8n_db

# PostgreSQL connection string
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n_db
DB_POSTGRESDB_USER=n8n_user
DB_POSTGRESDB_PASSWORD=change_this_secure_password

# ===========================================
# n8n Execution Settings
# ===========================================

# Execution mode (main or queue)
EXECUTIONS_MODE=regular

# Number of execution processes
N8N_CONCURRENCY_PRODUCTION_LIMIT=10

# ===========================================
# Security Settings
# ===========================================

# Encryption key for credentials (generate with: openssl rand -base64 32)
N8N_ENCRYPTION_KEY=

# Basic authentication (optional - recommended for initial setup)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=

# ===========================================
# Cloudflare Tunnel Configuration
# ===========================================

# Cloudflare Tunnel Token (get from Cloudflare Zero Trust dashboard)
TUNNEL_TOKEN=

# ===========================================
# Optional: Email Configuration (for notifications)
# ===========================================

# SMTP settings (optional)
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=
N8N_SMTP_PORT=587
N8N_SMTP_USER=
N8N_SMTP_PASS=
N8N_SMTP_SENDER=

# ===========================================
# Advanced Settings (optional)
# ===========================================

# Log level (info, warn, error, debug)
N8N_LOG_LEVEL=info

# Maximum payload size
N8N_PAYLOAD_SIZE_MAX=16

# User management mode
N8N_USER_MANAGEMENT_DISABLED=false

# Community packages
N8N_COMMUNITY_PACKAGES_ENABLED=true
