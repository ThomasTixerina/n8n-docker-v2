# ========================================
# Configuraci√≥n del Orquestador MiConsul
# ========================================

# Node Environment
NODE_ENV=production

# Server
PORT=3000
HOST=0.0.0.0

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=orchestrator
POSTGRES_USER=orchestrator
POSTGRES_PASSWORD=change_me_in_production

# GitHub
GITHUB_ORG=miconsul-workflows
GITHUB_TOKEN=your_github_token_here

# Loop Intervals (in milliseconds)
MONITORING_LOOP_INTERVAL=30000      # 30 seconds
OPTIMIZATION_LOOP_INTERVAL=300000   # 5 minutes
PREDICTIVE_LOOP_INTERVAL=60000      # 1 minute
LEARNING_LOOP_INTERVAL=3600000      # 1 hour
MAINTENANCE_LOOP_INTERVAL=86400000  # 24 hours

# Machine Learning
ML_ENABLED=true
ML_MODEL_PATH=./models
ANOMALY_DETECTION_THRESHOLD=0.85

# Notifications
SLACK_WEBHOOK_URL=
ADMIN_EMAIL=admin@miconsul.app

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# Features
AUTO_HEALING_ENABLED=true
AUTO_OPTIMIZATION_ENABLED=true
PREDICTIVE_MONITORING_ENABLED=true
